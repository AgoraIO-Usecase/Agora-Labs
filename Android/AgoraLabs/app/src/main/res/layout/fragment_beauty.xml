<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_chevron_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />
    <ImageView
        android:id="@+id/iv_switch_camera"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_camera_flip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/beauty"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"

        />
    <TextView
        android:id="@+id/tv_xiangxin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beauty_sdk_xiangxin"
        style="@style/beauty_button_text_style"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_switch_camera"
        />
    <TextView
        android:id="@+id/tv_agora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beauty_sdk_agora"
        style="@style/beauty_button_text_style"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_xiangxin"
        />
    <TextView
        android:id="@+id/tv_volc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beauty_sdk_volc"
        style="@style/beauty_button_text_style"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_agora"
        app:layout_constraintVertical_bias="0.15"
        />

    <io.agora.api.example.common.widget.bubbleseekbar.BubbleSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/menu_container"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        app:bsb_max="100"
        app:bsb_min="0"
        app:bsb_second_track_color="@color/color_blue"
        app:bsb_track_color="@color/white"
        app:bsb_track_size="3dp"
        app:bsb_bubble_color="@color/menu_bg"
        />
    <FrameLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_bg"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>