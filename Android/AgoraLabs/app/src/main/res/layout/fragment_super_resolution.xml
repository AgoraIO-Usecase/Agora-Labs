<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.5"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sub_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.5"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_chevron_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/permission_dp_10"
        android:layout_marginLeft="@dimen/permission_dp_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/super_res"
        android:textColor="@color/white"
        android:textSize="@dimen/permission_sp_16"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        android:layout_marginLeft="@dimen/permission_dp_5"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/iv_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_switch_camera"
        android:src="@mipmap/ic_view_1"
        android:layout_marginTop="@dimen/permission_dp_10"
        android:layout_marginRight="@dimen/permission_dp_10"/>

    <ImageView
        android:id="@+id/iv_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_camera_flip"
        android:layout_marginTop="@dimen/permission_dp_10"
        android:layout_marginRight="@dimen/permission_dp_10"/>

    <TextView
        android:id="@+id/sr_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sr_1"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sr_1_33"
        app:layout_constraintBottom_toTopOf="@+id/menu_controler"
        android:background="@drawable/bg_sr_selector"
        android:layout_marginBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/sr_1_33"
        android:layout_width="wrap_content"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="wrap_content"
        android:text="@string/sr_1_33"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/sr_1"
        app:layout_constraintRight_toLeftOf="@+id/sr_1_5"
        app:layout_constraintBottom_toTopOf="@+id/menu_controler"
        android:background="@drawable/bg_sr_selector"
        android:layout_marginBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/sr_1_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sr_1_5"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/sr_1_33"
        app:layout_constraintRight_toLeftOf="@+id/sr_2"
        app:layout_constraintBottom_toTopOf="@+id/menu_controler"
        android:background="@drawable/bg_sr_selector"
        android:layout_marginBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/sr_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sr_2"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/sr_1_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/menu_controler"
        android:background="@drawable/bg_sr_selector"
        android:layout_marginBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        />

    <Switch
        android:id="@+id/feature_switch"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/option_menu"
        android:background="#D9151325"
        android:text="@string/enable_sr"
        android:textColor="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingRight="16dp"
        android:textSize="15sp"
        />
    <LinearLayout
        android:id="@+id/menu_controler"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@drawable/bg_rectangle_top"
        app:layout_constraintBottom_toTopOf="@+id/feature_switch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center">
        <View
            android:layout_width="37dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/feature_switch" />
    </LinearLayout>
    <io.agora.api.example.common.widget.VideoFeatureMenu
        android:id="@+id/option_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>